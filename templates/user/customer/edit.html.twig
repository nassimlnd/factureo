                {{ form_row(editForm.firstName) }}
                {{ form_row(editForm.lastName) }}
            </div>
        </div>
        <div class="flex-col my-6 items-start gap-2 self-stretch">
            {{ form_row(editForm.fullAdress) }}
        </div>
        <div class="flex my-6 items-start gap-2 self-stretch">
            {{ form_row(editForm.email) }}
        </div>
        <div class="flex my-6 items-start gap-2 self-stretch">
            {{ form_row(editForm.phoneNumber) }}
        </div>
        <div class="flex-col my-6 items-start gap-2 self-stretch">
            {{ form_row(editForm.isCompany) }}
            {{ form_row(editForm.company) }}
