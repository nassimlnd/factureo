                                <input type="text" id="customer" name="customer" class="border border-gray-200 rounded-lg mt-2 bg-gray-50 p-3 pl-6">
                            </div>
                            <div class="flex flex-col max-w-[200px]">
                                <label for="customer">Prix unitaire</label>
                                <input type="text" id="customer" name="customer" class="border border-gray-200 rounded-lg mt-2 bg-gray-50 p-3 pl-6">
                            </div>
                            <div class="flex flex-col max-w-[200px]">
                                <label for="customer">Quantité</label>
                                <input type="text" id="customer" name="customer" class="border border-gray-200 rounded-lg mt-2 bg-gray-50 p-3 pl-6">
