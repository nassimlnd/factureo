<div class="w-[300px] h-screen space-y-2 flex flex-col justify-between border-r border-gray-100 fixed top-0 left-0 bg-white">
    <div>
        <div class="w-full py-4 px-6 items-center space-x-2 cursor-pointer hover:bg-slate-50 transition-colors ease-in-out transform"
             onmouseenter="(
         () => {
             document.getElementById('down-arrow').classList.remove('hidden');
         }) ()"
             onmouseleave="(
             () => {
                 document.getElementById('down-arrow').classList.add('hidden');
             }
         ) ()"
             onclick="(
             () => {
                 document.getElementById('user-menu').classList.toggle('hidden');
                 this.classList.toggle('bg-slate-50');
             }
         ) ()"
        >
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-2 justify-start">
                    {% if app.user.profilePicture == null %}
                        <div class="rounded-full bg-blue-600 text-white w-8 h-8 flex items-center justify-center">
                            {{ app.user.firstName|first }}{{ app.user.lastName|first }}
                        </div>
                    {% else %}
                        <img src="{{ vich_uploader_asset(app.user.profilePicture, 'imageFile') }}" alt="Profile picture"
                             class="w-8 h-8 rounded-full">
                    {% endif %}
                    <div>
                        <p class="-tracking-[0.48px] font-[400] text-base leading-[150%]">{{ app.user }}</p>
                        <p class="text-[11px] -tracking-[0.33px] leading-[125%] text-slate-500">ADMINISTRATEUR</p>
                    </div>
                </div>
                <svg id="down-arrow" class="hidden" xmlns="http://www.w3.org/2000/svg" width="12" height="8"
                     viewBox="0 0 12 8" fill="none">
                    <path d="M11 1.5L6 6.5L1 1.5" stroke="#0F172A" stroke-width="1.75" stroke-linecap="round"
                          stroke-linejoin="round"></path>
                </svg>
            </div>
            <div class="space-y-2 pt-4 hidden transition-all ease-in-out bg-slate-50" id="user-menu">
                <a href="{{ path('app_admin_account') }}" class="block">
                    <div class="flex p-2 w-full space-x-2 hover:bg-white rounded-lg">
                        <p class="px-1">👨‍💻</p>
                        <p class="-tracking-[0.48px] leading-[150%] text-base">Mon compte</p>
                    </div>
                </a>
                <a class="block">
                    <div class="flex p-2 w-full space-x-2 hover:bg-white rounded-lg">
                        <p class="px-1">⚙️</p>
                        <p class="-tracking-[0.48px] leading-[150%] text-base">Paramètres</p>
                    </div>
                </a>
                <a class="block">
                    <div class="flex p-2 w-full space-x-2 hover:bg-white rounded-lg">
                        <p class="px-1">🛟️</p>
                        <p class="-tracking-[0.48px] leading-[150%] text-base">Aide</p>
                    </div>
                </a>
                <a href="{{ path('app_logout') }}" class="block">
                    <div class="flex p-2 w-full space-x-2 hover:bg-white rounded-lg">
                        <p class="px-1">🔐</p>
                        <p class="-tracking-[0.48px] leading-[150%] text-base">Se déconnecter</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="overflow-auto">
            <div class="py-2 space-y-2 px-6">
                <a href="{{ path('app_admin_dashboard') }}" class="block">
                    <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                        <p class="px-1">📈</p>
                        <p class="-tracking-[0.48px] leading-[150%] text-base">Tableau de bord</p>
                    </div>
                </a>
                <a class="block">
                    <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                        <p class="px-1">🔔</p>
                        <p class="-tracking-[0.48px] leading-[150%] text-base">Notifications</p>
                        <p class="text-white bg-slate-900 rounded-full text-[14px] w-6 h-6 flex justify-center items-center">
                            10</p>
                    </div>
                </a>
            </div>
            <div class="space-y-2 px-6 py-2">
                <h4 class="text-xl font-[500] -tracking-[0.6px]">Administration</h4>
                <div class="space-y-2">
                    <a href="{{ path('app_admin_invoice_index') }}" class="block">
                        <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                            <p class="px-1">📄</p>
                            <p class="-tracking-[0.48px] leading-[150%] text-base">Factures</p>
                        </div>
                    </a>
                    <a class="block">
                        <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                            <p class="px-1">🏗️</p>
                            <p class="-tracking-[0.48px] leading-[150%] text-base">Devis</p>
                        </div>
                    </a>
                    <a href="{{ path('app_admin_transaction_index') }}" class="block">
                        <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                            <p class="px-1">💰</p>
                            <p class="-tracking-[0.48px] leading-[150%] text-base">Transactions</p>
                        </div>
                    </a>
                    <a href="{{ path('app_admin_user_index') }}" class="block">
                        <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                            <p class="px-1">📄</p>
                            <p class="-tracking-[0.48px] leading-[150%] text-base">Utilisateurs</p>
                        </div>
                    </a>
                    <a href="{{ path('app_admin_company_index') }}" class="block">
                        <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                            <p class="px-1">🏗️</p>
                            <p class="-tracking-[0.48px] leading-[150%] text-base">Entreprises</p>
                        </div>
                    </a>
                    <a href="{{ path('app_admin_customer_index') }}" class="block">
                        <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                            <p class="px-1">👨</p>
                            <p class="-tracking-[0.48px] leading-[150%] text-base">Clients</p>
                        </div>
                    </a>
                    <a class="block" href="{{ path('app_admin_message_index') }}">
                        <div class="flex p-2 w-full space-x-2 hover:bg-gray-100 rounded-lg">
                            <p class="px-1">✉️</p>
                            <p class="-tracking-[0.48px] leading-[150%] text-base">Messages</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="h-24 bg-slate-50 px-6 py-4 w-full flex justify-between items-center">
        <div class="space-y-2 flex flex-col items-center">
            <img src="{{ asset('assets/svg/logoWithText.svg') }}" alt="Logo with text" class="h-[30px] w-[79px]">
            <p class="text-slate-500 -tracking-[0.42px] leading-[125%] text-[14px]">Version Starter</p>
        </div>
        <a href="#" class="bg-slate-900 text-white text-[11px] -tracking-[0.33px] p-2 rounded-lg">Mettre à niveau</a>
    </div>
</div>