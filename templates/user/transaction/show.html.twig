{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>PaymentMethod</th>
                <td>{{ transaction.paymentMethod }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ transaction.amount }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ transaction.state }}</td>
            </tr>
            <tr>
                <th>PaymentDate</th>
                <td>{{ transaction.paymentDate ? transaction.paymentDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_transaction_index') }}">back to list</a>

    <a href="{{ path('app_user_transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('user/transaction/_delete_form.html.twig') }}
{% endblock %}
