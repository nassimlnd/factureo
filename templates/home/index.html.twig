{% extends 'base.html.twig' %}

{% block title %}Facturéo{% endblock %}

{% block body %}
    {{ component('Home:Navbar') }}
    <div class="py-24 w-2/4 mx-auto text-center pt-[170px] space-y-8 mb-64">
        <h1 class="max-w-7xl text-7xl font-[600] -tracking-[1.92px] mx-auto">Rendez simple la
            <span class="relative text-blue-600">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" viewBox="0 0 418 42"
                     class="absolute left-0 top-2/3 h-[0.58em] w-full fill-blue-300/70"
                     preserveAspectRatio="none">
                    <path d="M203.371.916c-26.013-2.078-76.686 1.963-124.73 9.946L67.3 12.749C35.421 18.062 18.2 21.766 6.004 25.934 1.244 27.561.828 27.778.874 28.61c.07 1.214.828 1.121 9.595-1.176 9.072-2.377 17.15-3.92 39.246-7.496C123.565 7.986 157.869 4.492 195.942 5.046c7.461.108 19.25 1.696 19.17 2.582-.107 1.183-7.874 4.31-25.75 10.366-21.992 7.45-35.43 12.534-36.701 13.884-2.173 2.308-.202 4.407 4.442 4.734 2.654.187 3.263.157 15.593-.78 35.401-2.686 57.944-3.488 88.365-3.143 46.327.526 75.721 2.23 130.788 7.584 19.787 1.924 20.814 1.98 24.557 1.332l.066-.011c1.201-.203 1.53-1.825.399-2.335-2.911-1.31-4.893-1.604-22.048-3.261-57.509-5.556-87.871-7.36-132.059-7.842-23.239-.254-33.617-.116-50.627.674-11.629.54-42.371 2.494-46.696 2.967-2.359.259 8.133-3.625 26.504-9.81 23.239-7.825 27.934-10.149 28.304-14.005.417-4.348-3.529-6-16.878-7.066Z"></path>
                </svg>
                <span class="relative">facturation</span>
            </span>
            de vos clients
        </h1>
        <p class="text-[16px] font-[400] -tracking-[0.48px] w-2/4 mx-auto">Les logiciels de facturation peuvent être
            compliqué à utiliser. Nous avons conçu la solution simple et efficace.</p>
        <div class="flex w-2/3 mx-auto space-x-10 justify-center">
            <a href="#features"
               class="bg-slate-900 hover:bg-slate-700 text-white rounded-full px-6 py-2 -tracking-[0.48px] font-[600] transition-colors ease-in-out">Découvrir</a>
            <a href="/register"
               class="text-black rounded-full px-6 py-2 -tracking-[0.48px] font-[600] border border-black hover:bg-gray-100 transition-colors ease-in-out">Inscrivez-vous
                dès maintenant</a>
        </div>
    </div>
    <section id="features" class="relative w-full h-[1024px]">
        <div class="absolute bg-blue-600 w-full h-[1024px]">
            <div class="relative h-full w-2/3 blur-[128px]">
                <svg class="absolute -bottom-8 left-2/4"
                        width="296" height="290" viewBox="0 0 296 290" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <ellipse cx="148" cy="145" rx="148" ry="145" fill="#26FFA4"></ellipse>
                </svg>
                <svg class="absolute bottom-1/3 left-2/4"
                     width="296" height="290" viewBox="0 0 296 290" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <ellipse cx="148" cy="145" rx="148" ry="145" fill="#FF431A"></ellipse>
                </svg>
                <svg class="absolute bottom-2/4 left-3/4"
                     width="296" height="290" viewBox="0 0 296 290" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <ellipse cx="148" cy="145" rx="148" ry="145" fill="#FDFF84"></ellipse>
                </svg>
                <svg class="absolute -bottom-8 left-2/4"
                     width="296" height="290" viewBox="0 0 296 290" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <ellipse cx="148" cy="145" rx="148" ry="145" fill="#26FFA4"></ellipse>
                </svg>
            </div>
        </div>
        <div class="relative w-2/3 mx-auto">
            <div class="pt-28 text-center space-y-6">
                <h1 class="text-5xl text-white font-[700] -tracking-[1.92px]">Tout ce dont vous avez besoin dans une solution</h1>
                <p class="text-white font-[500] text-base -tracking-[0.6px]">Oui, tout jusqu’à la gestion de vos taxes, remises et de vos clients</p>
            </div>
        </div>
    </section>
    <section id="pricing">
        <div class="h-[1024px] bg-slate-900 relative">
            <div class="w-2/3 mx-auto">
                <div class="pt-28 text-center space-y-6">
                    <h1 class="text-5xl text-white font-[700] -tracking-[1.92px]">Tarification claire, adaptée à tous</h1>
                    <p class="text-white font-[500] text-base -tracking-[0.6px]">La taille de votre entreprise nous importe peu, le logiciel s’adapte pour vous</p>
                </div>
            </div>
            <div class="flex w-2/3 justify-center mx-auto mt-24">
                {{ component('Home:PricingTile',
                    { price: 'Gratuit', name: 'Starter', description: 'Parfait pour n’importe qui, un auto-entrepreneur qui vient de débuter', isPrincipal: false,
                        features: [
                            {name: '5 clients maximum '},
                            {name: 'Factures illimitées'},
                            {name: 'Devis illimités'}
                        ]
                    })
                }}
                {{ component('Home:PricingTile',
                    { price: '5€', name: 'Petite entreprise', description: 'Parfait pour les petites / moyennes entreprises', isPrincipal: true,
                        features: [
                        {name: '30 clients maximum '},
                        {name: 'Factures illimitées'},
                        {name: 'Devis illimités'},
                        {name: 'Envoi de factures automatique'},
                        {name: 'Statistiques et rapports'}
                    ]
                    })
                }}
                {{ component('Home:PricingTile',
                    { price: '15€', name: 'Grandes entreprises', description: 'Parfait pour les grandes entreprises, quelque soit la taille', isPrincipal: false,
                        features: [
                        {name: 'Clients illimités'},
                        {name: 'Factures illimitées'},
                        {name: 'Devis illimités'},
                        {name: 'Accès à toutes les fonctionnalités'}
                    ]
                    })
                }}
            </div>
        </div>
    </section>
    {{ component('Home:Footer') }}
{% endblock %}
